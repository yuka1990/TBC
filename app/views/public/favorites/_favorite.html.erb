<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorite_path(post), method: :delete, remote: true do %>
    <i class="fa-solid fa-heart"></i>&nbsp;<%= post.favorites.count %>
  <% end %>
<% else %>
  <%= link_to post_favorite_path(post), method: :post, remote: true do %>
    <i class="fa-regular fa-heart"></i>&nbsp;<%= post.favorites.count %>
  <% end %>
<% end %>