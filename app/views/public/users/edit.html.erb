<h1>Users EDIT</h1>

<%= form_with model: @user do |f| %>
  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :HomeCountry %><br/>
    <%= f.collection_select :home_country_id, HomeCountry.all, :id, :name, { include_blank: "--Please select--"} %>
  </div>
  <div class="actions">
    </br>
    <%= f.submit "Save" ,class:"btn btn-success" %>
  </div>
<% end %>