<%= stylesheet_link_tag 'public/posts', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class='container'>
  <div class = "row">
    <h1 class="page-title">Favourites
    </h1>
    <div class = 'col-12'>
      <ul class="box">
      <% @favorite_posts.each do |post| %>
        <li class="card">
          <div class="card-img">
            <%= link_to post_path(post) do %>
              <%= image_tag post.get_image, size: "200x130" %>
            <% end %>
          </div>
            <div class="card-content">
              <h1 class="card-title"><%= post.title %></h1>
              <p class="card-text">
                Level: <%= post.level %></br>
                <%= post.originality %></br>
                <%= image_tag post.user.home_country.image, size: "20x20" %></br>
                <%= link_to post_comments_path(post) do %>
                <i class="fa-regular fa-comment"></i>&nbsp;<%= post.comments.count %>
                <% end %>
                &nbsp;&nbsp;&nbsp;&nbsp;
                <% if post.favorited_by?(current_user) %>
                    <%= link_to post_favorite_path(post), method: :delete do %>
                      <i class="fa-solid fa-heart"></i>&nbsp;<%= post.favorites.count %>
                <% end %>
                <% else %>
                    <%= link_to post_favorite_path(post), method: :post do %>
                      <i class="fa-regular fa-heart"></i>&nbsp;<%= post.favorites.count %>
                    <% end %>
                 <% end %>
            </div>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
</div>