<%= stylesheet_link_tag 'public/posts', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class='container'>
  <div class = "row">
    <h1 class="page-title">FAVOURITES</h1>
    <div class = 'col-12'>
      <ul class="box">
      <% @favorite_posts.each do |post| %>
        <li class="card">
          <div class="card-img">
            <%= link_to post_path(post) do %>
              <%= image_tag post.get_image, size: "200x130" %>
            <% end %>
          </div>
          <div class="card-content">
            <h1 class="card-title"><%= post.title %></h1>
            <p class="card-text">
              Level: <%= post.level %></br>
              <%= post.originality %></br>
              <%= image_tag post.user.home_country.image, size: "20x20" %></br>
              <%= link_to post_comments_path(post) do %>
                <i class="fa-regular fa-comment"></i>&nbsp;<%= post.comments.count %>
              <% end %>
              &nbsp;&nbsp;&nbsp;&nbsp;
              <span id="favorite_<%= post.id %>">
                <%= render "public/favorites/favorite", post: post %>
              </span>
            </div>
        </li>
      <% end %>
      </ul>
      </br>
      <%= link_to 'BACK', 'javascript:history.back()' ,class:"btn-back" %></br></br>
    </div>
  </div>
</div>