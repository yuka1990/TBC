<%= stylesheet_link_tag 'public/groups', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class='container'>
  <h1 class="page-title-long">EDIT TOUR</h1>
  <div class = "row mt-3">
    <div class = 'col'>
      <%= form_with model: @group, url: group_path, method: :patch do |f| %>
      <table>
        <tbody>
          <tr>
            <th><%= f.label:name, "Tour name" %></th>
            <td><%= f.text_field :name, size: "100x1" %></td>
          </tr>
          <tr>
            <th><%= f.label:introduction, "Introduction" %></th>
            <td><%= f.text_area :introduction , size: "100x10" %></td>
          </tr>
          <tr>
            <th><%= f.submit 'Save',class:"btn btn-warning" %></th>
            <td></td>
          </tr>
        </tbody>
      </table>
      <% end %>
      </br>
      <%= link_to 'BACK', 'javascript:history.back()' ,class:"btn-back" %></br></br>
    </div>
  </div>
</div>