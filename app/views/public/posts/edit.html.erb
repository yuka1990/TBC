<%= stylesheet_link_tag 'public/posts', media: 'all', 'data-turbolinks-track': 'reload' %>
<h1 class="page-title-long">RECIPE EDIT</h1>
<div class='container'>
  <div class = "row mt-3">
    <div class = 'col'>
      <%= render 'form', post: @post ,submit: 'Save' %>
      </br>
      <%= link_to 'Destroy' , post_path(@post), method: :delete, data: {confirm: 'Do you really want to delete it?'} ,class:"btn btn-danger" %>
　    </br>
　    <%= link_to 'BACK', 'javascript:history.back()' ,class:"btn-back" %>
    </div>
  </div>
</div>