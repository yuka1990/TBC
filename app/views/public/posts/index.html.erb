<%= stylesheet_link_tag 'public/posts', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class='container'>
  <div class = "row">
    <h1 class="page-title">Recipes
    </h1>
    <div class="search_form-1">
  　　<%= form_with local: true, method: :get do |f| %>
      　<%= f.collection_select :genre_id, Genre.all, :id, :name, { include_blank: "--Select Category--"} %>
      　<%= f.submit "Search" %>
    　<% end %>
  　</div>
    <div class="search_form-2">
  　　<%= form_with local: true, method: :get do |f| %>
      　<%= f.text_field :keyword %>
      　<%= f.submit "Search" %>
    　<% end %>
  　</div>
    <div class = 'col-12'>
      <ul class="box">
      <% @posts.each do |post| %>
        <li class="card">
          <div class="card-img">
            <%= link_to post_path(post) do %>
              <%= image_tag post.get_image, size: "200x130" %>
            <% end %>
          </div>
            <div class="card-content">
              <h1 class="card-title"><%= post.title %></h1>
              <p class="card-text">
                Level: <%= post.level %></br>
                <%= post.originality %></br>
                <%= image_tag post.user.home_country.image, size: "20x20" %></br>
                <%= link_to "#{post.comments.count} comments",post_comments_path(post) %></br>
            </div>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
</div>