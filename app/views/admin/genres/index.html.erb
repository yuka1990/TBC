<h1>Genre<br>list& new registrations</h1>


<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
<%= render 'public/shared/error_messages', resource: @genre %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.submit 'New Registration',class:"btn btn-success" %>

<% end %>

<table>
  <thead>
    <tr>
      <th>List</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "Edit",edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>