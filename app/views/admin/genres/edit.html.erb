<div class="container">
  <h1 class="my-2">Genres</h1><h2>Edit</h2>
  <div class="row">
    <div class="col-6 my-5">
      <%= form_with model: @genre, url: admin_genre_path(@genre) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.submit 'Save',class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
